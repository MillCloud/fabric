{
  "name": "@modyqyw/fabric",
  "version": "1.16.1",
  "description": "Shareable specification for different front-end projects.",
  "keywords": [
    "fabric",
    "config",
    "prettier",
    "markdownlint",
    "eslint",
    "stylelint",
    "commitlint",
    "ls-lint",
    "husky",
    "lint-staged",
    "javascript",
    "typescript",
    "js",
    "ts",
    "react",
    "react-native",
    "taro",
    "rax",
    "remax",
    "vue",
    "vue2",
    "vue3",
    "uniapp",
    "uni-app",
    "css",
    "less",
    "sass",
    "scss"
  ],
  "homepage": "https://github.com/ModyQyW/fabric#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/fabric/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/fabric.git"
  },
  "dependencies": {
    "@commitlint/config-conventional": "~12.0.0",
    "@typescript-eslint/eslint-plugin": "~4.15.2",
    "@typescript-eslint/parser": "~4.15.2",
    "babel-eslint": "~10.1.0",
    "eslint-config-airbnb": "~18.2.1",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-airbnb-typescript": "~12.3.1",
    "eslint-config-prettier": "~8.1.0",
    "eslint-import-resolver-node": "~0.3.4",
    "eslint-import-resolver-webpack": "~0.13.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jsx-a11y": "~6.4.1",
    "eslint-plugin-prettier": "~3.3.1",
    "eslint-plugin-react": "~7.22.0",
    "eslint-plugin-react-hooks": "~4.2.0",
    "eslint-plugin-vue": "~7.6.0",
    "stylelint-config-prettier": "~8.0.2",
    "stylelint-config-twbs-bootstrap": "~2.1.0",
    "stylelint-prettier": "~1.1.2",
    "typescript": "~4.2.2",
    "vue-class-component": "~7.2.6",
    "vue-eslint-parser": "~7.5.0",
    "vue-property-decorator": "~9.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~12.0.0",
    "commitizen": "~4.2.3",
    "eslint": "~7.20.0",
    "husky": "~4.3.8",
    "lint-staged": "~10.5.4",
    "markdownlint-cli": "~0.26.0",
    "prettier": "~2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "eslintConfig": {
    "extends": "./eslint/native"
  },
  "prettier": "./prettier",
  "commitlint": {
    "extends": "./commitlint"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "yarn lint:json && yarn lint:markdown && yarn lint:script",
    "lint:json": "prettier ./**/*.json --write",
    "lint:markdown": "markdownlint . --fix",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.md": "markdownlint --fix",
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  }
}
